<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/theme_2">


    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
            <TextView
                    android:text="PACKAGE NAME"
                    android:layout_width="0dp"
                    android:layout_height="57dp"
                    android:id="@+id/textView_final_package_name"
                    android:textStyle="normal|bold" android:textAlignment="center"
                    android:textSize="18sp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:gravity="center"
                    android:textColor="@color/background"/>
            <TextView
                    android:text="DURATION :"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/textView_duration" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_final_package_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:textSize="16sp" android:textStyle="bold"
                    android:textColor="@color/background" android:gravity="center"/>
            <TextView
                    android:text="DURATION VALUE"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:id="@+id/textView_duration_value"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView_duration" android:layout_marginStart="8dp"
                    android:textSize="16sp" android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_final_package_name"
                    android:textColor="@color/background" android:gravity="center"/>
            <TextView
                    android:text="PRICE :"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/textView_price" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView_duration"
                    android:textStyle="bold" android:textSize="16sp" android:textColor="@color/background"
                    android:gravity="center"/>
            <TextView
                    android:text="PRICE VALUE"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:id="@+id/textView_price_value" app:layout_constraintStart_toEndOf="@+id/textView_price"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:textStyle="bold" android:textSize="16sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView_price"
                    android:textColor="@color/background" android:gravity="center"/>
            <TextView
                    android:layout_width="365dp"
                    android:layout_height="147dp"
                    android:id="@+id/textView_package_info"
                    android:textStyle="italic" android:textSize="14sp"
                    android:textColor="@color/background"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView_price_value"
                    android:gravity="center"
                    android:maxWidth="300dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="*package not inclusive of transport"
                    android:layout_width="391dp"
                    android:layout_height="47dp"
                    android:id="@+id/textView_transport_info"
                    app:layout_constraintTop_toBottomOf="@+id/textView_package_info"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="1.0"
                    android:textSize="12sp" android:textStyle="bold" android:textColor="@color/background"
                    android:textAlignment="center" android:gravity="center"/>
            <Button
                    android:text="Book"
                    android:layout_width="135dp"
                    android:layout_height="45dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/button_book" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_transport_info"
                    android:textAlignment="center"

                    android:textSize="18sp" app:layout_constraintVertical_bias="0.46"
                    android:background="@drawable/buttons_background" android:textColor="@color/theme_1"
                    android:textStyle="italic"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>