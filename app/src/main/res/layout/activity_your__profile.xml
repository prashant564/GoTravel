<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/login_logo"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="@+id/textView_profile"
            app:layout_constraintEnd_toEndOf="@+id/textView_profile"
            android:id="@+id/imageView_profile_pic"
            app:layout_constraintHorizontal_bias="0.493" tools:layout_editor_absoluteY="73dp"
            tools:ignore="MissingConstraints"/>
    <Button
            android:text="save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_save_yourdispalay"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView_city" app:layout_constraintEnd_toEndOf="@+id/textView_city"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView_city"
            app:layout_constraintVertical_bias="0.147"/>
    <TextView
            android:text="PROFILE"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView_profile"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView_profile_pic"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" android:textSize="26sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="@+id/imageView_profile_pic"
            app:layout_constraintEnd_toEndOf="@+id/imageView_profile_pic"
            android:id="@+id/textView_username" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/imageView_profile_pic"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="@+id/textView_username"
            app:layout_constraintEnd_toEndOf="@+id/textView_username"
            android:id="@+id/textView_login_email" app:layout_constraintTop_toBottomOf="@+id/textView_username"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="@+id/textView_login_email" app:layout_constraintEnd_toEndOf="@+id/textView_login_email"
            android:id="@+id/textView_city"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_email" android:layout_marginTop="16dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>