<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CityEntry">

    <TextView
            android:text="please fill the city info"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textView17" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="166dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="106dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="city_name"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="@+id/textView17" android:id="@+id/editText_cityname"
            app:layout_constraintTop_toBottomOf="@+id/textView17" android:layout_marginTop="52dp"
    />
    <Button
            android:text="save city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_save_cityinfo"
            app:layout_constraintStart_toStartOf="@+id/button_image4"
            app:layout_constraintEnd_toEndOf="@+id/button_image4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_image4"/>
    <Button
            android:layout_width="183dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="@+id/editText_cityname"
            app:layout_constraintEnd_toEndOf="@+id/editText_cityname"
            android:id="@+id/button_city_image" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_cityname"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="@+id/button_city_image"
            app:layout_constraintEnd_toEndOf="@+id/button_city_image" android:id="@+id/button_image1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_city_image" app:layout_constraintHorizontal_bias="0.0"
    />
    <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="@+id/button_image1"
            app:layout_constraintEnd_toEndOf="@+id/button_image1"
            android:id="@+id/button_image2" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_image1"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_image3" app:layout_constraintStart_toStartOf="@+id/button_image2"
            app:layout_constraintEnd_toEndOf="@+id/button_image2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_image2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/button_image4" app:layout_constraintStart_toStartOf="@+id/button_image3"
            app:layout_constraintEnd_toEndOf="@+id/button_image3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_image3"/>
</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>