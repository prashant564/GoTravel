<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:background="@color/theme_2">


    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
            <RadioButton
                    android:text="COD"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/radioButton_paypal" android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton_debit_credit_card" android:checked="true"
                    android:textColor="@color/theme_1"/>
            <RadioButton
                    android:text="NET BANKING"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/radioButton_net_banking" android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton_upi" android:clickable="false"
                    android:textColor="@color/theme_1"/>
            <RadioButton
                    android:text="DEBIT/CREDIT CARD"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/radioButton_debit_credit_card" android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/radioButton_net_banking"
                    android:layout_marginTop="24dp" android:clickable="false" android:textColor="@color/theme_1"/>
            <RadioButton
                    android:text="UPI"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:id="@+id/radioButton_upi" android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="false" android:textColor="@color/theme_1" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <Button
                    android:text="Proceed"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_proceed"
                    android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/radioButton_paypal"
                    android:background="@drawable/buttons_background" android:textColor="@color/theme_1"
                    android:textStyle="italic"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</LinearLayout>