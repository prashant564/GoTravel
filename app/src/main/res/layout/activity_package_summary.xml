<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/textView_price_total" android:background="@color/theme_2">

    <TextView
            android:text="PACKAGE NAME"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:id="@+id/textView_final_package_name" android:textSize="24sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:textStyle="bold" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" android:gravity="center" android:textColor="@color/theme_1"/>
    <TextView
            android:text="DATE"
            android:layout_width="328dp"
            android:layout_height="49dp"
            android:id="@+id/textView_date" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="@+id/textView_final_package_name"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_final_package_name"
            android:textColor="@color/background" android:gravity="center" app:layout_constraintHorizontal_bias="0.49"/>
    <TextView
            android:text="Total Price"
            android:layout_width="141dp"
            android:layout_height="38dp"
            android:id="@+id/textView_total_price_heading" android:textSize="24sp" android:textColor="@color/theme_1"
            android:textAlignment="textStart" android:gravity="center"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView_date"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Adult"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/textView_adult_price_total"
            app:layout_constraintStart_toStartOf="@+id/textView_total_price_heading" android:layout_marginStart="8dp"
            android:textColor="@color/theme_1" android:gravity="center" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_total_price_heading"/>
    <TextView
            android:text="Child"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/textView_child_price_total"
            app:layout_constraintStart_toStartOf="@+id/textView_adult_price_total" android:textColor="@color/theme_1"
            android:gravity="center" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_adult_price_total"/>
    <TextView
            android:text="Senior"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/textView_senior_price_total"
            app:layout_constraintStart_toStartOf="@+id/textView_child_price_total" android:textColor="@color/theme_1"
            android:gravity="center" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_child_price_total"/>
    <TextView
            android:text="0"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/textView_adult_counter_value"
            app:layout_constraintStart_toEndOf="@+id/textView_adult_price_total"
            android:layout_marginStart="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_adult_price_total"
            android:textColor="@color/background" android:gravity="center"/>
    <TextView
            android:text="0"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/textView_child_counter_value"
            app:layout_constraintStart_toEndOf="@+id/textView_child_price_total"
            android:layout_marginStart="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_child_price_total"
            android:textColor="@color/background" android:gravity="center"/>
    <TextView
            android:text="0"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/textView_senior_counter_value"
            app:layout_constraintStart_toEndOf="@+id/textView_senior_price_total"
            android:layout_marginStart="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_senior_price_total"
            android:textColor="@color/background" android:gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/textView_package_adult_price"
            app:layout_constraintStart_toEndOf="@+id/textView_adult_counter_value"
            android:layout_marginStart="32dp"
            android:textColor="@color/theme_1" android:background="@color/background" android:gravity="center"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView_total_price_heading"/>
    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:id="@+id/textView_package_child_price" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/textView_child_counter_value"
            android:textColor="@color/theme_1" android:background="@color/background" android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/textView_package_adult_price" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_package_adult_price"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/textView_package_senior_price"
            app:layout_constraintEnd_toEndOf="@+id/textView_package_child_price"
            app:layout_constraintStart_toEndOf="@+id/textView_senior_counter_value" android:layout_marginStart="32dp"
            android:textColor="@color/theme_1" android:background="@color/background" android:gravity="center"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView_package_child_price"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="18%@GST"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="@+id/textView_package_senior_price" android:id="@+id/textView_gst"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView_package_senior_price"
            android:background="@color/background" android:textColor="@color/theme_1" android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/textView_package_senior_price"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:id="@+id/textView_total_price_gst" app:layout_constraintEnd_toEndOf="@+id/textView_gst"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView_gst"
            app:layout_constraintStart_toEndOf="@+id/textView_total_textview" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.979" android:background="@color/background"
            android:textColor="@color/theme_1" android:gravity="center"/>
    <TextView
            android:text="Total:"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="@+id/textView_senior_price_total"
            android:id="@+id/textView_total_textview" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_senior_price_total" android:textColor="@color/theme_1"
            android:gravity="center" android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="Pay Now"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:id="@+id/textView_pay_now"
            android:background="@drawable/buttons_background" android:textColor="@color/theme_1" android:gravity="center"
            android:textStyle="italic" android:textSize="18sp"
            android:layout_marginStart="116dp" app:layout_constraintStart_toStartOf="@+id/textView_total_textview"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/textView_total_textview"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</LinearLayout>